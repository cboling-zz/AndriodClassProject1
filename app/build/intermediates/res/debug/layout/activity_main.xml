<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity"
                android:touchscreenBlocksFocus="true"
                android:background="#000000">

  <SeekBar
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/seekBar"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentStart="true"
    android:max="31"
    android:progress="0"/>

  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="false"
    android:layout_alignParentTop="true"
    android:layout_weight="2"
    android:id="@+id/artsyLayout"
    android:layout_above="@id/seekBar"
    android:background="#000000">

    <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_alignParentStart="false"
      android:layout_alignParentTop="true"
      android:layout_weight="3"
      android:id="@+id/leftFirstLevelColumn"
      android:background="#000000"
      android:layout_marginRight="2dp">

      <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:id="@+id/leftTopSecondLevelColumn"
        android:background="#aa0202"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"/>

      <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:id="@+id/leftBottomSecondLevelColumn"
        android:background="#00ff22"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"/>
    </LinearLayout>

    <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="2"
      android:layout_alignParentEnd="true"
      android:layout_alignParentTop="true"
      android:id="@+id/rightFirstLevelColumn"
      android:baselineAligned="false"
      android:background="#000000"
      android:layout_marginLeft="2dp">

      <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:id="@+id/rightTopSecondLevelColumn"
        android:background="#004400"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"/>

      <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:id="@+id/rightMiddleSecondLevelColumn"
        android:background="#ffffff"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"/>

      <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:id="@+id/rightBottomSecondLevelColumn"
        android:background="#220077"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"/>
    </LinearLayout>

  </LinearLayout>

</RelativeLayout>
