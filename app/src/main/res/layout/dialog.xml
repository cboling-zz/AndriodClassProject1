<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              android:background="#ff3664ff"
              android:weightSum="1">
  <TextView
    android:id="@+id/textView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:text="Inspired by the works of artists such as Piet Mondrain and Ben Nicholson."
    android:textAlignment="center"
    android:textColor="#ffffffff"
    android:gravity="center_horizontal"/>
  <TextView
    android:id="@+id/textView2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:text="Click below to learn more!"
    android:textAlignment="center"
    android:textColor="#ffffffff"
    android:gravity="center_horizontal"/>
  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_weight="0.04"
    android:gravity="center_horizontal"
    >

    <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Visit MOMA"
      android:background="#ff3664ff"
      android:textColor="#ffffffff"
      android:id="@+id/visitMOMA"
      android:layout_marginRight="10dp"/>

    <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Not Now"
      android:background="#ff3664ff"
      android:textColor="#ffffffff"
      android:id="@+id/notNow"
      android:layout_marginLeft="10dp"/>
  </LinearLayout>
</LinearLayout>